 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES
 		(
 			#{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 			, #{rentPrice}
 			, now()
 			, now()
 		)
 	</insert>

 </mapper>