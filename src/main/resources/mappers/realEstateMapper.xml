<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.allured.test.lesson03.dao.RealEstateDAO">
 	<select id="selectRealEstate" resultType="com.allured.test.lesson03.model.RealEstate"
 	parameterType="int">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			`id` = #{id}
 	</select>
 	
 	<select id="selectRealEstate2" resultType="com.allured.test.lesson03.model.RealEstate"
 	parameterType="int">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 		<![CDATA[`rentPrice` < #{rent}]]>
 	</select>
 	
 	<select id="selectRealEstate3" resultType="com.allured.test.lesson03.model.RealEstate"
 	parameterType="int">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 		<![CDATA[
 			`type` = "매매"
 		AND	
 			`area` >= #{area}
 		AND
 			`price` <= #{price}
 		]]>
 	</select>
 	
 	<!-- parameterType이 여러개 일때 (실험) -->
 	<select id="selectRealEstate4" resultType="com.allured.test.lesson03.model.RealEstate"
 	parameterType="map">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 		<![CDATA[
 			`type` = #{type}
 		AND	
 			`area` <= #{area}
 		AND
 			`price` <= #{price}
 		AND
 			`address` LIKE CONCAT(#{address},'%')
 		]]>
 	</select>
 </mapper>